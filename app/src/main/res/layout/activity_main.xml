<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <EditText
        android:id="@+id/TxtNumberInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter any three digit number"
        android:textSize="30sp"
        android:inputType="number"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:maxLength="3"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/BtnNumberConvert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Convert into Word"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/TxtNumberInput"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/TxtNumberOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="90dp"
        android:textStyle="bold"
        android:layout_below="@+id/BtnNumberConvert"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorAccent"
        />


</RelativeLayout>